{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "import/no-extraneous-dependencies": "warn",
    "global-require": "warn",
    "no-underscore-dangle": "warn",
    "node/no-unpublished-require": "warn",
    "no-continue": "warn",
    "no-restricted-syntax": "warn"
  }
}
